#!/usr/bin/env bash

out=${1:-out.pdf}
personal_dir=${2:-personal}

pandoc \
	--listings \
	-f markdown \
	--filter=pandoc-xnos \
	--bibliography=bib/dsr.bib \
	--bibliography=bib/architecture.bib \
	--bibliography=bib/practical_measurement.bib \
	--top-level-division=chapter \
	--resource-path=:"$personal_dir":"$personal_dir"/infocard \
  --metadata xnos-warning-level=1 \
	meta.yaml \
	"$personal_dir"/labels.tex \
	frontmatter.tex \
	"$personal_dir"/*.md \
	--pdf-engine=lualatex \
	-t latex \
	-o "$out"
